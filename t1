#include <iostream>

using namespace std;

int reverse_numbers(int a, int s, int b = 0) {
  while(a > 0) {
    s = a % 10;
    a = a / 10;
    b = b * 10 + s;
  }
  return b;
} // ф-ция переворачивает цифры в числе

int main() {
  int n, obr = 0, c;
  cout << "Введите число: ";
  cin >> n;
  cout << "Перевернутое: " << reverse_numbers(n, c, obr);
  return 0;
}
