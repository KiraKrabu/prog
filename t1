#include <iostream>

using namespace std;

int reverse_numbers(int a) { // ф-ция переворачивает цифры в числе
  int s;
  int b = 0;
  while(a > 0) {
    s = a % 10;
    a = a / 10;
    b = b * 10 + s;
  }
  return b;
} 

int main() {
  int n;
  cout << "Введите число: ";
  cin >> n;
  cout << "Перевернутое: " << reverse_numbers(n);
  return 0;
}
